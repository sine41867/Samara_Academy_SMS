<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="PrimaryColor">#2988D6</Color>
    <Color x:Key="PrimaryColorHover">#4e9ddd</Color>
    <Color x:Key="PrimaryColorClick">#6aace2</Color>
    <Color x:Key="PrimaryColorForeground">#EAFAFA</Color>

    <Color x:Key="SecondaryColor">#7E30CF</Color>
    <Color x:Key="TextColor">#3A393A</Color>
    <Color x:Key="TextColorLight">#6A696A</Color>

    <Color x:Key="BackgroundMainColor">#F0F7FC</Color>

    <Color x:Key="BackgroundMainColor2">#E1EFF9</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryColorHover}"/>
    <SolidColorBrush x:Key="PrimaryClickBrush" Color="{StaticResource PrimaryColorClick}"/>
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="{StaticResource PrimaryColorForeground}"/>

    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>

    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="TextLightBrush" Color="{StaticResource TextColorLight}"/>

    <SolidColorBrush x:Key="BackgroundMainBrush" Color="{StaticResource BackgroundMainColor}"/>
    <SolidColorBrush x:Key="BackgroundMainBrush2" Color="{StaticResource BackgroundMainColor2}"/>

</ResourceDictionary>